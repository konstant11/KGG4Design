@model Demo.AspNetCore.ServerSentEvents.Services.dbContact
@{
    Layout = "~/Views/Shared/_Layoutdev.cshtml";
    ViewData["Title"] = "NewContact";
    ViewData["Main-Header"] = "Add new contact";
    ViewData["Header-details"] = "";

}
<body>
    <form action="/Contact/update-contact" method="post">
        @Html.EditorFor(m => m)
        <div>
            <input id="Avatar" type='file' onchange="readURL(this);" />
            <img id="icon" src="#" alt="your avatar" />
        </div>

        <button type="submit" class="btn btn-light">Update</button>
    </form>
    <script>
function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                var binsrc = e.target.result;
                $('#icon')
                    .attr('src', binsrc)
                    .width(45)
                    .height(45);
                $('#Avatar').val(binsrc);
           };

            reader.readAsDataURL(input.files[0]);
        }
    }</script>
</body>